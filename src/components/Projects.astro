---
import Card from "./Card.astro";
import ProjectButton from "./ProjectButton";
import "./Cards.css";

const projects = [
  {
    name: "Mistery Lux: Landing page",
    description:
      "A simple landing page for school project about a business idea for selling candles with dedications: Created with Astro and React",
    image: "/portfolio/mistery-lux_landing.png",
    link: "https://github.com/MiguelRlia117/MisteryLux-Landing",
    demo: "https://miguelrlia117.github.io/MisteryLux-Landing/",
  },
  {
    name: "React: Shopping cart",
    description:
      "A simple React Shopping Cart - state management in class based components: created with create-react-app",
    image: "/portfolio/shopping-cart.png",
    link: "https://github.com/MiguelRomero-313/React_ShoppingCart",
    demo: "",
  },
  {
    name: "Express: User Authenticator",
    description:
      "User authenticator made with ExpressJs and data encryption with JWT: Created and tested with NodeJS,Express and Postman",
    image: "/portfolio/jwt-img.png",
    link: "",
    demo: "",
  },
];
---

<Card>
  <div class="projects-card" id="projects">
    <h2>My last projects</h2>
    <div class="project-list">
      {
        projects.map((project) => (
          <div class="project-card">
            <div id="project-text">
              <h3>{project.name}</h3>
              <p>{project.description}</p>
              <ProjectButton
                buttonLink={project.link}
                buttonDemo={project.demo}
                client:visible
              />
            </div>

            <img src={project.image} style="width: 200px;height:100px" />
          </div>
        ))
      }
    </div>
  </div>
</Card>
